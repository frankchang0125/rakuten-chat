{
    "index_patterns": [
        "messages"
    ],
    "version": 20190713,
    "settings": {
        "number_of_replicas": 1,
        "number_of_shards": 1
    },
    "mappings": {
        "_doc": {
            "properties": {
                "chatroom": {
                    "type": "integer"
                },
                "user": {
                    "type": "keyword"
                },
                "message": {
                    "type": "text"
                },
                "timestamp": {
                    "type": "date",
                    "format": "epoch_millis"
                }
            }
        }
    }
}
